def summa(a, b):
    return a + b

def delenie(a, b):
    if b == 0:
        raise ValueError("error")
    return a / b

def proizvedenie(n):
    return n * n

def factorial(n):
    if n < 0:
        raise ValueError("error")
    result = 1
    for i in range(1, n+1):
        result *= i
    return result

def srednee(*sred):
    if not sred:
        raise ValueError("error")
    return sum(sred) / len(sred)
#также добавим сортировку bubble sort из лр3
def bubblesort(nums):
    swapped = True

    while swapped:
        swapped = False
        for i in range(len(nums) - 1):

            if nums[i] > nums[i + 1]:
                nums[i], nums[i + 1] = nums[i + 1], nums[i]
                swapped = True
    return nums
